<div style="background-color: #ccc">
  Vous avez reçu une invitation par "team3". Voulez-vous l'accepter?

  <form action="/dashboard/invite" method="get">
    <button type="submit" value="true" name="accept">Accepter</button>
    <button type="submit" value="false" name="accept">Refuser</button>
  </form>
</div>

<div>
  <h2>Téléverser votre IA</h2>
  <form action="/dashboard/upload" method="post" enctype="multipart/form-data">
    <label>
      .zip
      <input type="file" id="file">
    </label>
  </form>
</div>

<div>
  <h2>Démarrer une nouvelle partie</h2>
  <form action="/game" method="post">
    {{#each bots}}
      <input type="checkbox" name="team" value="{{this.id}}">{{this.name}}<br>
    {{/each}}
    <input type="submit" value="Démarrer">
  </form>
</div>

<div>
  <h2>Historique</h2>
  <table>
    <tr>
      <th>Équipe</th>
      <th>Victoire?</th>
      <th>Date</th>
    </tr>
    <tr>
      <td>team2</td>
      <td>Nope</td>
      <td>Hier</td>
    </tr>
    <tr>
      <td>team2</td>
      <td>Nope</td>
      <td>Encore hier</td>
    </tr>
  </table>
</div>
